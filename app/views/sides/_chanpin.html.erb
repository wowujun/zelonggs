
<body class="blog single-post">
<div class="wrap">
  <div id="main">
    <!-- Title, Breadcrumb Start-->
    <div class="breadcrumb-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
            <h2 class="title">产品展示</h2>
          </div>
          <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
            <div class="breadcrumbs pull-right">
              <ul>
                <li>你所在位置:</li>
                <li><a href="index-2.html">首页</a></li>
                <li><a href="#">产品</a></li>
                <li>产品展示</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Title, Breadcrumb End-->
    <!-- Main Content start-->
    <div class="content">
      <div class="container">
        <div class="row">
          <div class="posts-block col-lg-12 col-md-12 col-sm-12 col-xs-12 bottom-pad">
            <article class="post hentry">
              <div class="post-image col-md-5" style="margin-bottom: 15px">
                <%=@sidecontent.content.html_safe%>
              </div>
              <header class="post-header">
                <h3 class="content-title"><%=@sidecontent.title%></h3>
                <div class="blog-entry-meta">
                  <div class="blog-entry-meta-date">
                    <i class="icon-time"></i>
                    <%=@sidecontent.time.strftime("%Y-%m-%d")%>
                  </div>
                  <div class="blog-entry-meta-comments">
                    <i class="icon-comments"></i>
                    型号：<%=@sidecontent.version%>
                  </div>
                </div>
              </header>
              <div class="post-content">
                <p>
                  产品特性：
                </p>
                <p style="text-indent: 2em">
                  <%=@sidecontent.feature%>
                </p>
                <br>
                <p>
                  使用范围：
                </p>
                <p style="text-indent: 2em">
                  <%=@sidecontent.range%>
                </p>

              </div>
            </article>
          </div>
          <!-- Sidebar End -->
        </div>
      </div>
    </div>
    <!-- Main Content end-->
  </div>
  <!-- Content End -->
</div>
<!-- Wrap End -->

